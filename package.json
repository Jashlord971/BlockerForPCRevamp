{
  "name": "eagleblockerforpc",
  "version": "1.0.0",
  "description": "Eagle Blocker for PC",
  "author": "Your Name <your.email@example.com>",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "node scripts/build.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && cross-env ELECTRON_BUILDER_DISABLE_SYMLINKS=true electron-builder --win --x64 --config.forceCodeSigning=false",
    "start": "electron .",
    "clean": "rmdir /s /q %LOCALAPPDATA%\\electron-builder\\Cache || true"
  },
  "build": {
    "appId": "com.yourcompany.eagleblocker",
    "productName": "Eagle Blocker",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "get-installed-apps": "^1.1.1",
    "node-windows": "^1.0.0-beta.8",
    "ps-node": "^0.1.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  }
}